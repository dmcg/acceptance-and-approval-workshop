<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<svg
   xmlns:svg="http://www.w3.org/2000/svg"
   xmlns:xlink="http://www.w3.org/1999/xlink"
   xmlns="http://www.w3.org/2000/svg"
   width="1000"
   height="1000"
   version="1.1">
  <defs>
      <path id="datapoint"
            fill="none" stroke="#000000" stroke-width="1px" stroke-linecap="round" stroke-opacity="1"
            d="M -4 -4 L 4 4 M -4 4 L 4 -4"/>
  </defs>

  <g transform="translate(0,1000) scale(1,-1)">
    <g id="data">
    {{#data}}<use xlink:href="#datapoint" transform="translate({{x}},{{y}})"/>
    {{/data}}
    </g>

    <path id="trend"
       fill="none" stroke="#ff0000" stroke-width="3" stroke-linecap="butt" stroke-linejoin="miter" stroke-opacity="0.75"
       d="M {{trend.start}} L
       {{#trend.ends}}{{.}}
       {{/trend.ends}}"/>
  </g>
</svg>
